{
  "name": "codesnipnow",
  "version": "1.0.0",
  "description": "CodeSnipNow snippet sharing hub for ServiceNow teams",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "npm --prefix client run dev",
    "build": "npm --prefix client run build",
    "build:client": "npm --prefix client run build",
    "preview": "npm --prefix client run preview",
    "postinstall": "npm --prefix client install",
    "import:business-rules": "node scripts/importBusinessRules.js",
    "import:snippets": "node scripts/importSnippets.js"
  },
  "keywords": [
    "servicenow",
    "snippets",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "connect-sqlite3": "^0.9.16",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
